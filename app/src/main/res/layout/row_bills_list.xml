<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingTop="5dp"
    android:alpha="1.0"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lrBillsNr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:text="Nr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Normal_Text"/>

    <TextView
        android:id="@+id/lrBillDate"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:text="Date"
        android:alpha="1.0"
        app:layout_constraintStart_toEndOf="@+id/lrBillsNr"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Normal_Text"/>

    <TextView
        android:id="@+id/lrBillTitle"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:text="Date"
        android:alpha="1.0"
        app:layout_constraintStart_toEndOf="@+id/lrBillDate"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Normal_Text"/>

    <TextView
        android:id="@+id/lrBillAmount"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:text="Amount"
        android:gravity="right"
        app:layout_constraintEnd_toStartOf="@id/lrBillCurrency"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Title_Text"/>

    <TextView
        android:id="@+id/lrBillCurrency"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:text="Currency"
        app:layout_constraintEnd_toStartOf="@id/bBillRemove"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Normal_Text"/>

    <ImageButton
        android:id="@+id/bBillRemove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/minus" />

</androidx.constraintlayout.widget.ConstraintLayout>