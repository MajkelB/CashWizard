<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingTop="5dp"
    android:alpha="1.0"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lrIncomeNr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:text="Nr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Normal_Text"/>

    <TextView
        android:id="@+id/lrIncomeDate"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:text="Date"
        android:alpha="1.0"
        app:layout_constraintStart_toEndOf="@+id/lrIncomeNr"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Normal_Text"/>

    <TextView
        android:id="@+id/lrIncomePerson"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:text="Person"
        android:alpha="1.0"
        app:layout_constraintStart_toEndOf="@+id/lrIncomeDate"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Title_Text"/>

    <TextView
        android:id="@+id/lrIncomeAmount"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:text="Amount"
        android:gravity="right"
        app:layout_constraintEnd_toStartOf="@id/lrIncomeCurrency"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Title_Text"/>

    <TextView
        android:id="@+id/lrIncomeCurrency"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:text="Currency"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Normal_Text"/>

</androidx.constraintlayout.widget.ConstraintLayout>