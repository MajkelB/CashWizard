<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <!-- radius background of progressbar -->
            <!--android:centerColor="@color/colorWelcomeProgressCenter"-->
            <!--android:startColor="@color/colorWelcomeProgressStart"-->
            <!--android:centerColor="@color/colorWelcomeProgressCenter"-->
            <!--android:endColor="@color/colorWelcomeProgressEnd"            -->
            <corners android:radius="1dip" />
            <gradient
                android:startColor="@color/welcomeProgressStart"
                android:centerColor="@color/welcomeProgressCenter"
                android:endColor="@color/welcomeProgressEnd"
                android:centerY="0.25"
                android:angle="0"
                android:gradientRadius="10dip"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/welcomeProgressStart"
                    android:centerColor="@color/welcomeProgressCenter"
                    android:endColor="@color/welcomeProgressEnd"
                    android:centerY="0.5"
                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <!-- radius of secundary progress -->
                <corners
                    android:radius="1dip" />
                <gradient
                    android:startColor="@color/welcomeProgressStart"
                    android:centerColor="@color/welcomeProgressCenter"
                    android:endColor="@color/welcomeProgressEnd"
                    android:centerY="0.75"
                    android:angle="0" />
            </shape>
        </clip>
    </item>

</layer-list>